<div>
  <div style="margin-bottom: 50px;">
    <h1>Bienvenido</h1>
    <h3>Nombre: {{name}} {{lastname}}</h3>
    <h3>Correo: {{email}}</h3>
    <h3>Rol: {{role}}</h3>
  </div>
  <div>
    <form class="row g-3" id="add-form">
      <h1>Agregar producto </h1>
      <div class="col-2">
        <input
          type="text"
          class="form-control"
          id="name"
          placeholder="Nombre"
          required
        />
      </div>
      <div class="col-2">
        <input
          type="text"
          class="form-control"
          id="description"
          placeholder="Descripción"
          required
        />
      </div>
      <div class="col-1">
        <input
          type="text"
          class="form-control"
          id="price"
          placeholder="Precio"
          required
        />
      </div>
      <div class="col-3">
        <input
          type="text"
          class="form-control"
          id="thumbnail"
          placeholder="Imagen"
          required
        />
      </div>
      <div class="col-1">
        <input
          type="text"
          class="form-control"
          id="code"
          placeholder="Código"
          required
        />
      </div>
      <div class="col-1">
        <input
          type="text"
          class="form-control"
          id="stock"
          placeholder="Stock"
          required
        />
      </div>
      <div class="col-1">
        <input
          type="text"
          class="form-control"
          id="category"
          placeholder="Categoria"
          required
        />
      </div>
      <div class="col-1">
        <button
          type="submit"
          id="button-add"
          class="btn btn-primary mb-3"
        >Agregar</button>
      </div>
    </form>
  </div>
  <h1>Lista de productos </h1>
  <table class="table table-hover">
    <thead>
      <tr>
        <td scope="col">ID</td>
        <td scope="col">Nombre</td>
        <td scope="col">Descripción</td>
        <td scope="col">Precio</td>
        <td scope="col">Imagen</td>
        <td scope="col">Código</td>
        <td scope="col">Stock</td>
        <td scope="col">Categoría</td>
        <td scope="col">Acción</td>
      </tr>
    </thead>
    <tbody>
      {{#each products.products}}
        <tr>
          <td scope="col"> {{this._id}} </td>
          <td scope="col"> {{this.title}} </td>
          <td scope="col"> {{this.description}} </td>
          <td scope="col"> {{this.price}} </td>
          <td scope="col"><img src={{this.thumbnail}} /></td>
          <td scope="col"> {{this.code}} </td>
          <td scope="col"> {{this.stock}} </td>
          <td scope="col"> {{this.category}} </td>
          <td scope="col"> <button>Agregar al carrito</button> </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
</div>
<div>
  <form action="/api/users/logout" method="GET">
    <input
      class="btn btn-primary btn-block mb-4"
      type="submit"
      value="Cerrar Sesión"
    />
  </form>
</div>